<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <HediffDef>
        <defName>RaddusX_Demons_Draining_Kiss_Victim_Drained_Hediff</defName>
        <label>drained</label>
        <description>This poor victim was killed when they were unable to resist a Succubus' powerful Draining Kiss ability.</description>
        <hediffClass>Hediff</hediffClass>
        <countsAsAddedPartOrImplant>false</countsAsAddedPartOrImplant>
        <scenarioCanAdd>false</scenarioCanAdd>
        <!--<allowMothballIfLowPriorityWorldPawn>true</allowMothballIfLowPriorityWorldPawn>-->
        <maxSeverity>1.0</maxSeverity>
        <isBad>true</isBad>
    </HediffDef>

    <HediffDef>
        <defName>RaddusX_Demons_Draining_Kiss_Caster_Drained_Hediff</defName>
        <label>drained</label>
        <description>This Succubus' victim successfully resisted their Draining Kiss ability, resulting in zero psyessence being absorbed. As a result, they will feel weaker for a time.</description>
